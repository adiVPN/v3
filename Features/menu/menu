# // ----->>> COLOR UNDER LINE
function Lunatic_Banner() {
clear
echo -e "${BlueCyan}┌─────────────────────────────────────────────────┐${Xark} "
echo -e " ${BG_RED}                  ARISCTUNNEL V3                 ${Xark} "
echo -e "${BlueCyan}└─────────────────────────────────────────────────┘${Xark} "
}



function Service_System_Operating() {
echo -e "${BlueCyan}┌─────────────────────────────────────────────────┐${Xark} "
echo -e " ${BlueCyan} SYSTEM        : $MODEL     ${Xark} "
echo -e " ${BlueCyan} RAM           : $RAM mb    ${Xark} "
echo -e " ${BlueCyan} CPU           : $cpu_usage ${Xark} "
echo -e " ${BlueCyan} ISP           : $ISP       ${Xark} "
echo -e " ${BlueCyan} IPV           : $IPVPS     ${Xark} "
echo -e " ${BlueCyan} DOMAIN        : $domain    ${Xark} "
echo -e "${BlueCyan}└─────────────────────────────────────────────────┘${Xark}"

}

function Service_Status() {
echo -e "${BlueCyan}┌─────────────────────────────────────────────────┐${Xark} "
echo -e "${BlueCyan}|${Xark}${Yellow} PROXY ${Xark}  $status_haproxy  ${Xark}|${Yellow} NGINX  ${Xark} $status_nginx  ${Xark}|${Yellow} SSHWS  ${Xark} $status_ws_epro ${Xark}|  $status_dropbear  ${BlueCyan}| ${Xark} "
echo -e "${BlueCyan}└─────────────────────────────────────────────────┘${Xark} "
}


function List_All_Account() {
echo -e "${BlueCyan}     ┌───────────────────────────────────────┐${Xark} "
echo -e "${BlueCyan}              SSH OPENVPN    :     $ssh1         ${Xark} " 
echo -e "${BlueCyan}              VLESS XRAY     :     $vla          ${Xark} " 
echo -e "${BlueCyan}              VMESS XRAY     :     $vma          ${Xark} " 
echo -e "${BlueCyan}              TRJAN XRAY     :     $trb          ${Xark} " 
echo -e "${BlueCyan}              SSR-LIBEV      :     $ssa          ${Xark} "   
echo -e "${BlueCyan}     └───────────────────────────────────────┘${Xark} "

}

function Details_Clients_Name() {
echo -e "${BlueCyan}   ┌───────────────────────────────────────────┐${Xark} "
