echo -e "${BlueCyan}     Expiry      :${Xark}${Red} $certifacate Day ${Xark} "
echo -e "${BlueCyan}   └───────────────────────────────────────────┘${Xark} "
}


function List_Menu() {
echo -e "${BlueCyan}┌─────────────────────────────────────────────────┐${Xark} "
echo -e "${green}   1.) SSH                    6.) Backup Rstore ${Xark} "
echo -e "${Green}   2.) VMESS                  7.) Update Script ${Xark} "
echo -e "${green}   3.) VLESS                  8.) Bot Telegram  ${Xark} "
echo -e "${Green}   4.) TROJAN                 9.) Features      ${Xark} "
echo -e "${green}   5.) Ssr-Libev              x.) EXIT          ${Xark} "

echo -e "${BlueCyan}└─────────────────────────────────────────────────┘${Xark}"
}


function Exe_Menu() {
read -p "select [1\9 or x] :   " Lt
case $Lt in
1) clear ; m-ssh ;;
2) clear ; m-vme ;;
3) clear ; m-vle ;;
4) clear ; m-tro ;;
5) clear ; m-ssr ;;
6) clear ; m-bkp ;;
7) clear ; upp ;;
8) clear ; m-bot ;;
9) clear ; m-ftr ;;
*) welcome ;;
esac
}

